<html>
<head>
    <title> ToDo App </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:100"     rel="stylesheet">
    <link href="/style.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  </head>
<body>
  <div class="container">
    <div class="row">

        <h3 class="h3"> A Simple ToDo List App </h3>

    </div>
<div>
<form action ="/addtask" method="POST">
  <div class="row"><div class="col-md-7"> <input class="form-control" type="text" name="newtask" placeholder="add new task"> </div> <div class="col-md-5">      <button class="btn btn-primary"> Add Task </button></div>
<h3> Pending Task </h3>
<% for( var i = 0; i < task.length; i++){ %>
 <div class="card-pending"><li class="mylist"><input type="checkbox" name="check" value="<%= task[i] %>" /> <%= task[i] %> </li></div> 
  <% } %>
<button formaction="/removetask" type="submit"> Remove </button>
</form>
<h3> Completed task </h3>

<% for(var i = 0; i < complete.length; i++){ %>
 <div class="card-complete"><li class="mylist"><input type="checkbox" checked><%= complete[i] %> </li></div> 
<% } %>
</div>
</div>
</body>
</html>